<tryton>
    <data>
        <record model="ir.ui.view" id="stock_view_tree">
            <field name="model">product.template</field>
            <field name="type">tree</field>
            <field name="priority" eval="10"/>
            <field name="name">stock_tree</field>
        </record>
        <record model="ir.ui.icon" id="inventory_icon">
            <field name="name">tryton-inventory</field>
            <field name="path">icons/tryton-inventory.svg</field>
        </record>

        <record model="ir.action.act_window" id="act_stock_form">
            <field name="name">Stock</field>
            <field name="res_model">product.template</field>
            <field name="search_value"></field>
        </record>

        <record model="ir.action.act_window.view" id="act_stock_form_view1">
            <field name="sequence" eval="1"/>
            <field name="view" ref="stock_view_tree"/>
            <field name="act_window" ref="act_stock_form"/>
        </record>

        <record model="ir.action.act_window.domain" id="act_stock_form_domain_all">
            <field name="name">Inventario de Mercaderia</field>
            <field name="sequence" eval="10"/>
            <field name="domain" eval="[('active', '=', True)]" pyson="1"/>
            <field name="act_window" ref="act_stock_form"/>
        </record>

        <menuitem name="Stock" id="menu_stock" sequence="7" icon="tryton-inventory"/>
        <menuitem name="Stock" parent="menu_stock" id="menu_stock_"
            sequence="1" icon="tryton-list" action="act_stock_form"/>

        <!--REPORTE TOTAL DE INVENTARIO-->
        <record model="ir.ui.view" id="print_stock_report_start_view_form">
            <field name="model">nodux_stock_one.print_report_stock.start</field>
            <field name="type">form</field>
            <field name="name">stock_report_start_form</field>
        </record>
        <record model="ir.action.wizard" id="wizard_stocks_report">
            <field name="name">Reporte de Inventario</field>
            <field name="wiz_name">nodux_stock_one.print_report_stock</field>
        </record>
        <record model="ir.action.report" id="report_stocks">
            <field name="name">Reporte de Inventario</field>
            <field name="model"></field>
            <field name="report_name">nodux_stock_one.report_stocks</field>
            <field name="report">nodux_stock_one/report_stocks.ods</field>
        </record>
        <menuitem parent="menu_stock" action="wizard_stocks_report"
            id="menu_stock_report" icon="tryton-print"/>

        <!--INVENTARIO INICIAL -->
        <!-- Views -->
        <record model="ir.ui.view" id="stock_initial_line_view_tree">
            <field name="model">stock.line</field>
            <field name="type">tree</field>
            <field name="priority">20</field>
            <field name="name">stock_initial_line_tree</field>
        </record>
        <record model="ir.ui.view" id="stock_initial_line_view_form">
            <field name="model">stock.line</field>
            <field name="type">form</field>
            <field name="name">stock_initial_line_form</field>
        </record>

        <record model="ir.ui.view" id="stock_initial_view_tree">
            <field name="model">stock.stock</field>
            <field name="type">tree</field>
            <field name="priority">20</field>
            <field name="name">stock_initial_tree</field>
        </record>
        <record model="ir.ui.view" id="stock_initial_view_form">
            <field name="model">stock.stock</field>
            <field name="type">form</field>
            <field name="priority">20</field>
            <field name="name">stock_initial_form</field>
        </record>
        <!-- Actions -->
        <record model="ir.action.act_window" id="act_stock_initial_form">
            <field name="name">Inventario Inicial</field>
            <field name="res_model">stock.stock</field>
        </record>

        <record model="ir.action.act_window.view" id="act_stock_initial_view_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="stock_initial_view_form"/>
            <field name="act_window" ref="act_stock_initial_form"/>
        </record>

        <record model="ir.action.act_window.view" id="act_stock_initial_view_tree">
            <field name="sequence" eval="10"/>
            <field name="view" ref="stock_initial_view_tree"/>
            <field name="act_window" ref="act_stock_initial_form"/>
        </record>

        <record model="ir.action.act_window.domain" id="act_stock_initial_form_domain_draft">
            <field name="name">Draft</field>
            <field name="sequence" eval="10"/>
            <field name="domain" eval="[('state', '=', 'draft')]" pyson="1"/>
            <field name="act_window" ref="act_stock_initial_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_stock_initial_form_domain_done">
            <field name="name">Done</field>
            <field name="sequence" eval="20"/>
            <field name="domain" eval="[('state', '=', 'done')]" pyson="1"/>
            <field name="act_window" ref="act_stock_initial_form"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_stock_initial_form_domain_all">
            <field name="name">All</field>
            <field name="sequence" eval="9999"/>
            <field name="domain"></field>
            <field name="act_window" ref="act_stock_initial_form"/>
        </record>

        <menuitem name="Inventario Inicial" parent="menu_stock" id="menu_stock_initial_pos"
            sequence="1" icon="tryton-list" action="act_stock_initial_form"/>
    </data>
</tryton>
